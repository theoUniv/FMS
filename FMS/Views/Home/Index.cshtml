@{
    ViewData["Title"] = "Statistiques GitHub";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center">
        <h2>Langages les plus populaires</h2>
        <button id="logoutButton" class="btn btn-danger">Déconnexion</button>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-3">
        <button id="updateLangagesButton" class="btn btn-primary">Mettre à jour les données des langages</button>
        <button id="updateYearlyStatsButton" class="btn btn-secondary">Mettre à jour les statistiques annuelles</button>
    </div>

    <div id="loadingSpinner" class="text-center mt-3">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Chargement...</span>
        </div>
        <p>Chargement des données, veuillez patienter...</p>
    </div>

    <div class="mt-4">
        <h3>Nombre de dépôts par langage</h3>
        <canvas id="languageChart" width="400" height="200" style="display: none;"></canvas>
    </div>

    <div class="mt-4">
        <h3>Nombre de dépôts par année</h3>
        <canvas id="yearChart" width="400" height="200" style="display: none;"></canvas>
    </div>
</div>

<!-- Import des scripts nécessaires -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="~/js/home/Index.js"></script>
